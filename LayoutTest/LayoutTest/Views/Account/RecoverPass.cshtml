@model LayoutTest.Models.Account
@{
    ViewBag.Title = "RecoverPass";
}
<center>
    <h2>Recover Password</h2>

    @using (Html.BeginForm("RecoverPass", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Get random password</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Username)
            </div>

            <div class="editor-field">
                @Html.EditorFor(model => model.Username)
                <font color="RED"> @Html.ValidationMessageFor(model => model.Username)</font>
            </div>
            <br/>
            <p>
                <input type="submit" value="Send new password" />
            </p>


        </fieldset>
    }
    <div>
        @Html.ActionLink("Back", "Index", "Login")
    </div>
</center>
